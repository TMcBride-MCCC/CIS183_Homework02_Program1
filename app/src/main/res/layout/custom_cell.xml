<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cc"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_v_cc_redNumVal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="111"
        app:layout_constraintStart_toEndOf="@+id/tv_v_cc_redLabel"
        app:layout_constraintTop_toTopOf="@+id/tv_v_cc_greenLabel" />

    <TextView
        android:id="@+id/tv_v_cc_redLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="18dp"
        android:text="Red: "
        app:layout_constraintBaseline_toBaselineOf="@+id/tv_v_cc_redNumVal"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tv_v_cc_greenLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Green: "
        app:layout_constraintBaseline_toBaselineOf="@+id/tv_v_cc_greenNumVal"
        app:layout_constraintEnd_toEndOf="@+id/tv_v_cc_hexVal"
        app:layout_constraintStart_toEndOf="@+id/tv_v_cc_hexVal" />

    <TextView
        android:id="@+id/tv_v_cc_greenNumVal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="222"
        app:layout_constraintStart_toEndOf="@+id/tv_v_cc_greenLabel"
        app:layout_constraintTop_toTopOf="@+id/tv_v_cc_blueLabel" />

    <TextView
        android:id="@+id/tv_v_cc_blueLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="7dp"
        android:text="Blue: "
        app:layout_constraintBaseline_toBaselineOf="@+id/tv_v_cc_blueNumVal"
        app:layout_constraintStart_toEndOf="@+id/tv_v_cc_greenNumVal" />

    <TextView
        android:id="@+id/tv_v_cc_blueNumVal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="333"
        app:layout_constraintStart_toEndOf="@+id/tv_v_cc_blueLabel"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_v_cc_hexLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="18dp"
        android:text="Hex: "
        app:layout_constraintBaseline_toBaselineOf="@+id/tv_v_cc_hexVal"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tv_v_cc_hexVal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="ABCDEF"
        app:layout_constraintStart_toEndOf="@+id/tv_v_cc_hexLabel"
        app:layout_constraintTop_toBottomOf="@+id/tv_v_cc_redLabel" />
</androidx.constraintlayout.widget.ConstraintLayout>